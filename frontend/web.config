<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>

        <!-- Redirect all HTTP requests to HTTPS -->
        <rule name="Redirect to HTTPS" enabled="true" stopProcessing="true">
          <match url="(.*)" ignoreCase="true" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Redirect root domain to www -->
        <rule name="Redirect to WWW" enabled="true" stopProcessing="true">
          <match url="(.*)" ignoreCase="true" />
          <conditions>
            <!-- Only apply if host is NOT www -->
            <add input="{HTTP_HOST}" pattern="^wookietoast\.com$" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://www.wookietoast.com/{R:1}" redirectType="Permanent" />
        </rule>

      </rules>
    </rewrite>
  </system.webServer>
</configuration>
