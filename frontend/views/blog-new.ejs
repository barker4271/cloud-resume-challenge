<section class="content">
  <h1>Add a New Blog Post</h1>

  <p>
    Use the form below to create a new blog entry.
  </p>

  <!-- Blog creation form -->
  <!-- This POSTs to /blog/new, which server.js will handle -->
  <form method="POST" action="/blog/new">

    <!-- Blog topic -->
    <div class="form-group">
      <label for="topic">Topic</label>
      <input
        type="text"
        id="topic"
        name="topic"
        required
        placeholder="Enter blog topic"
      />
    </div>

    <!-- Blog body -->
    <div class="form-group">
      <label for="body">Body</label>
      <textarea
        id="body"
        name="body"
        rows="8"
        required
        placeholder="Write your blog post here..."
      ></textarea>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn">
      üíæ Save Blog Post
    </button>

    <!-- Cancel / Back link -->
    <p style="margin-top: 20px;">
      <a href="/blog">‚Üê Back to Blog</a>
    </p>
  </form>
</section>

