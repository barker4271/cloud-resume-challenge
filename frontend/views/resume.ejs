<h1>Resume</h1>

<section class="experience">
  <h2>Professional Experience</h2>
  <% resume.experience.forEach(job => { %>
    <div class="job">
      <div class="job-title"><%= job.title %></div>
      <div class="job-meta"><%= job.client %> — <%= job.location %> • <%= job.dates %></div>
      <div class="job-desc"><%= job.description %></div>
    </div>
  <% }) %>
</section>

<section class="education">
  <h2>Education</h2>
  <% resume.education.forEach(edu => { %>
    <% if (edu.degree) { %>
      <div><strong><%= edu.degree %></strong> — <%= edu.school %>, <%= edu.year %></div>
    <% } else if (edu.certificates) { %>
      <div><strong>Professional Certificates:</strong> <%= edu.certificates.join(', ') %></div>
    <% } %>
  <% }) %>
</section>

<section class="skills">
  <h2>Skills</h2>
  <ul>
    <% resume.skills.forEach(skill => { %>
      <li><%= skill %></li>
    <% }) %>
  </ul>
</section>

<section class="languages">
  <h2>Languages</h2>
  <ul>
    <% resume.languages.forEach(lang => { %>
      <li><%= lang %></li>
    <% }) %>
  </ul>
</section>
