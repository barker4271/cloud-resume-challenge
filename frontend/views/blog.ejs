<section class="content">
  <h1>Blog</h1>

  <!-- Button to create a new blog post -->
  <p>
    <a href="/blog/new" class="btn">
      âž• Add New Blog Post
    </a>
  </p>

  <!-- If no blog posts exist -->
  <% if (!posts || posts.length === 0) { %>
    <p>No blog posts yet. Be the first to write one!</p>
  <% } else { %>

    <!-- Blog post list -->
    <ul class="blog-list">
      <% posts.forEach(function(post) { %>
        <li class="blog-item">
          <h3><%= post.topic %></h3>

          <p class="blog-meta">
            <em>
              Posted on
              <%= new Date(post.createdAt).toLocaleString() %>
            </em>
          </p>

          <p class="blog-body">
            <%= post.body %>
          </p>
        </li>
      <% }); %>
    </ul>

  <% } %>
</section>

<style>
  .blog-list {
    list-style: none;
    padding: 0;
  }

  .blog-item {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #ddd;
  }

  .blog-meta {
    color: #666;
    font-size: 0.9rem;
  }

  .blog-body {
    margin-top: 10px;
    white-space: pre-wrap;
  }

  .btn {
    display: inline-block;
    padding: 8px 14px;
    background: #1976d2;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }

  .btn:hover {
    background: #125aa0;
  }
</style>
