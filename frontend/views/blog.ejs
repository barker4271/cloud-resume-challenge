<h1 class="page-title">Blog</h1>
<p class="lead">
  Thoughts, notes, and experiments from the Wookiee engineering desk.
</p>

<a href="/blog/new" class="btn btn-primary" style="margin-bottom: 1rem;">
  + Add New Blog Post
</a>

<% if (posts.length === 0) { %>
  <div class="card">
    <p class="muted">No blog posts yet. Be the first to post!</p>
  </div>
<% } else { %>
  <% posts.forEach(post => { %>
    <div class="card blog-post">
      <h2><%= post.topic %></h2>
      <p class="small muted">
        <%= new Date(post.createdAt).toLocaleString() %>
      </p>
      <p><%= post.body %></p>
    </div>
  <% }) %>
<% } %>